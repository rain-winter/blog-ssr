// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// Data source
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Data model

// title 
model Article {
  id        Int       @id @default(autoincrement())
  title     String
  content   String    @db.Text
  views     Int       @default(0) // 观看次数
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  is_delete Int       @default(0) // 是否删除 0不删 1删除
  User      User?     @relation(fields: [userId], references: [id])
  userId    Int?
  tags      Tag[]
  comments  Comment[]
}

model UserAuth {
  id            Int    @id @default(autoincrement())
  identity_type String //登录方式 phone
  identifier    String
  credential    String
  User          User?  @relation(fields: [userId], references: [id])
  userId        Int?
}

model Tag {
  id            Int       @id @default(autoincrement())
  title         String
  icon          String
  follow_count  Int?
  article_count Int?
  users         User[]
  articles      Article[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User?    @relation(fields: [userId], references: [id])
  userId    Int?
  Article   Article? @relation(fields: [articleId], references: [id])
  articleId Int?
}

model User {
  id        Int        @id @default(autoincrement())
  nickname  String?
  job       String?
  avatar    String?
  introduce String?
  articles  Article[]
  comments  Comment[]
  tags      Tag[]
  userAuths UserAuth[]
}
